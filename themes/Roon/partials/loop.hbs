{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}

{{!-- Add a `featured` class to the first post on each page, if it has an image and isn't already featured --}}
<article class="{{post_class}} {{#if @first}}{{#if image}}{{#unless featured}}featured{{/unless}}{{/if}}{{/if}}">

    {{#if image}}
        <div class="image-holder">
            <a href="{{url}}" class="inner" style="background-image: url('{{image}}');">
                <img src="{{image}}">
            </a>
        </div>
    {{/if}}

    <div class="meta">
        <time datetime="{{date format='YYYY-MM-DD'}}"><a href="{{url}}">{{date format="DD MMMM, YYYY"}}</a></time>
    </div>

    <header>
        <h1><a href="{{url}}">{{title}}</a></h1>
    </header>

    <div class="text">
        <p>{{excerpt words="45"}}</p>
        <a href="{{url}}" class="readmore">Lire la suite</a>
    </div>
</article>
{{/foreach}}

<div id="no_posts" style="display:none;margin-bottom:70px;font-size:1.4em;">Aucun billet publi√©</div>
<script>
window.onload = function () {
    if (document.getElementsByTagName('article').length === 0) {
        document.getElementById('no_posts').style.display = 'block';
    }
}</script>

{{! Previous/next page links - displayed on every page }}
{{pagination}}
